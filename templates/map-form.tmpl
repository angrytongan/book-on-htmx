{{block "map-form" .}}
	<div class="h-full flex flex-col space-y-4 p-4">
		<h1 class="text-xl font-bold">Map form</h1>

		{{block "map-form-form" .}}
			<form class="flex flex-col space-y-4 h-full">
				{{/* top controls */}}
				<div class="flex space-x-4" 
						 hx-disinherit="*"
				>
					<select name="cc" class="select shrink max-w-48"
									hx-get="/map-form/form"
									hx-target="closest form"
						>
						<option value="au" {{if eq .CC "au"}}selected{{end}}>Australia</option>
						<option value="nz" {{if eq .CC "nz"}}selected{{end}}>New Zealand</option>
					</select>

					<label class="input flex-1">
						<span class="material-symbols-outlined text-base-content/50">search</span>

						<input type="search"
									 placeholder="Type something..."
						/>
					</label>
				</div>

				{{/* map */}}
				<div class="flex-1">
					<div id="map"
							 class="flex-1 h-full"
							 hx-preserve="true"
							 _="
									on load
										call createMap(me.id) then set :map to it
							 "
					>
					</div>
				</div>

				{{/* lower controls */}}
				<div class="flex justify-between">
					<button class="btn">Back</button>
					<div>
						<button class="btn btn-secondary">Close</button>
						<button class="btn btn-primary"
										{{if .NextDisabled}}disabled{{end}}
							>Next</button>
					</div>
				</div>
			</form>
		{{end}}
	</div>
{{end}}
