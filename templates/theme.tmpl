{{block "theme-chooser" .}}
  <ul>
    {{range .Themes}}
      <li>
        <label>
          <input type="radio"
                 name="theme"
                 value="{{.Value}}"
                 {{if .Active}}checked{{end}}
                 hx-post="/theme-chooser"
                 hx-trigger="change"
                 /> {{.Label}}
        </label>
      </li>
    {{end}}
  </ul>
{{end}}

{{define "theme-chooser-loader"}}
  <div class="flex flex-col gap-2 mt-2">
    {{range 6}}
      <div class="flex flex-row gap-2">
        <div class="skeleton h-3 w-3 rounded-full"></div>
        <div class="skeleton h-3 w-16"></div>
      </div>
    {{end}}
  </div>
{{end}}
