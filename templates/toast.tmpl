            remove me
       "
    >
    <span class="flex-1">Random letter: {{.Letter}}</span>
    <button class="btn btn-accent btn-sm"
            _="on click remove closest <div.alert/>">X</button>
  </div>
{{end}}

{{block "toast-random-word" .}}
