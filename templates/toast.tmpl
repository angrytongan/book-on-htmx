{{block "toast-page" .}}
  {{template "head" .}}
  {{template "nav-head" .}}

  {{template "toast"}}

  {{template "nav-foot" .}}
  {{template "foot" .}}
{{end}}

{{block "toast" .}}
  <h1 class="text-xl">Toast</h1>

  <button class="btn btn-primary"
          hx-get="/toast/server-time"
          hx-target="div.toast"
          hx-swap="afterbegin"
          >Get server time</button>

  <div class="toast toast-top toast-end"></div>
{{end}}

{{block "toast-server-time" .}}
  <div class="alert alert-info"
       _="on load
            wait 5s
            transition my opacity to 0% over 500ms
            remove me
       "
    >
    <span>Server time: {{.Now}}</span>
    <button class="btn btn-info btn-sm"
            _="on click remove closest <div.alert/>">X</button>
  </div>
{{end}}
