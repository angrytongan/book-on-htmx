{{block "toast" .}}
  <h1 class="text-xl font-bold">Toast</h1>

  <div class="w-1/2 flex flex-col gap-4 mx-auto">
    <button class="btn btn-primary w-full"
            hx-get="/toast/server-time"
            hx-target="div.toast"
            hx-target-error="div.toast"
            hx-swap="afterbegin"
            hx-disabled-elt="this"
            hx-indicator="#loading-indicator"
            >Get server time</button>

    <button class="btn btn-secondary w-full"
            hx-get="/toast/random-number"
            hx-target="div.toast"
            hx-target-error="div.toast"
            hx-swap="afterbegin"
            hx-disabled-elt="this"
            hx-indicator="#loading-indicator"
            >Get random number</button>

    <button class="btn btn-accent w-full"
            hx-get="/toast/random-letter"
            hx-target="div.toast"
            hx-target-error="div.toast"
            hx-swap="afterbegin"
            hx-disabled-elt="this"
            hx-indicator="#loading-indicator"
            >Get random letter</button>

    <button class="btn btn-warning w-full"
            hx-get="/toast/random-word"
            hx-target="div.toast"
            hx-target-error="div.toast"
            hx-swap="afterbegin"
            hx-disabled-elt="this"
            hx-indicator="#loading-indicator"
            >Get random word</button>
  </div>

  <div class="toast toast-top toast-end
      pt-16
      md:pt-0 md:pl-40"></div>
{{end}}

{{block "toast-server-time" .}}
  <div class="alert alert-info flex"
       _="on load
            wait 5s
            transition my opacity to 0% over 500ms
            remove me
       "
    >
    <span class="flex-1">Server time: {{.Now}}</span>
    <button class="btn btn-info btn-sm"
            _="on click remove closest <div.alert/>">X</button>
  </div>
{{end}}

{{block "toast-random-number" .}}
  <div class="alert alert-success flex"
       _="on load
            wait 5s
            transition my opacity to 0% over 500ms
            remove me
       "
    >
    <span class="flex-1">Random number: {{.Number}}</span>
    <button class="btn btn-success btn-sm"
            _="on click remove closest <div.alert/>">X</button>
  </div>
{{end}}

