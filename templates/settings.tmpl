{{block "settings-page" .}}
  {{template "head" .}}

  {{template "settings" .}}

  {{template "foot" .}}
{{end}}

{{block "settings" .}}
  <h1 class="text-xl">Settings</h1>

  <div class="flex flex-row gap-4">

    <div class="card card-border w-1/2">
      <div class="card-body">
        <div class="card-title">Theme</div>
        <div hx-get="/theme-chooser"
             hx-trigger="load delay:100ms"
             hx-target="this"
             hx-swap="outerHTML">{{template "theme-chooser-loader"}}</div>
      </div>
    </div>

    <div class="card card-border w-1/2">
      <div class="card-body">
        <div class="card-title">Something else</div>
      </div>
    </div>

  </div>
{{end}}
